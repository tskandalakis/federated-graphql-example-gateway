{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/configurations/**.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}